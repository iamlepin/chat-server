{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "indent": ["warn", 2],
        "arrow-parens": 0,
        "react/sort-comp": 0,
        "import/prefer-default-export": 0,
        "react/forbid-prop-types": ""
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended", 
        "plugin:react/recommended"
    ]
}
